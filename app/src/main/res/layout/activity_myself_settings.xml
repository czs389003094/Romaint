<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.qjm3662.newproject.myself.Myself_settings"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/bar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/bar_tv"
            android:textSize="26.5sp"
            android:paddingTop="15dp"
            android:text="个人设置"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="姓名："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="@color/black"
            android:id="@+id/et_userName"
            android:background="@drawable/rectangle_title"
            android:hint="@string/name"
            android:padding="5dp"
            android:textColorHint="@color/gray_deep"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="个签："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="@color/black"
            android:id="@+id/et_personNote"
            android:background="@drawable/rectangle_title"
            android:hint="个签"
            android:padding="5dp"
            android:textColorHint="@color/gray_deep"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:layout_below="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="头像地址："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="@color/black"
            android:id="@+id/et_avatar"
            android:background="@drawable/rectangle_title"
            android:hint="头像地址"
            android:padding="5dp"
            android:textColorHint="@color/gray_deep"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_saveChange"
        android:text="保存设置"
        android:textSize="24sp"
        android:background="@color/gray_light"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
